<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWeapon">

    <TextView
        android:id="@+id/addWeapon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add New Weapon"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="462dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addWeapon_title"
        tools:layout_editor_absoluteX="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addWeapon_nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: " />

            <EditText
                android:id="@+id/addWeapon_name"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Weapon Name"
                android:inputType="textPersonName"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addWeapon_damageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Damage: " />

            <EditText
                android:id="@+id/addWeapon_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0 to 100 %"
                android:inputType="number"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addWeapon_firstTalentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Talent: " />

            <Spinner
                android:id="@+id/addWeapon_firstTalent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addWeapon_secondTalentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Talent: " />

            <Spinner
                android:id="@+id/addWeapon_secondTalent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addWeapon_freeTalentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Talent: " />

            <Spinner
                android:id="@+id/addWeapon_freeTalent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/addWeapon_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Submit"
        android:onClick="addWeapon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>